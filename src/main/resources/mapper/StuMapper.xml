<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dorm.mapper.StuMapper">
    <!--查询方法
       id = 方法名
       resultType = 返回值类型  user别名
       #{属性名} - 自动调用传入对象的属性值
    -->
    <select id="queryStuList" resultType="student">
        select * from t_student;
    </select>
    
    <delete id="deleteStu">
        delete from t_student where stuId=#{stuId};
    </delete>

    <insert id="insertStu">
        insert into t_student(stuNum,stuName,stuBuild,dormName,stuSex,stuTel)
        values (#{stuNum},#{stuName},#{stuBuild},#{dormName},#{stuSex},#{stuTel});
    </insert>

    <select id="selectStu" resultType="student">
        select * from t_student where stuNum=#{stuNum}；
    </select>

    <update id="updateStu">
        update t_student set
        stuNum=#{stuNum},
        stuName=#{stuName},
        stuBuild=#{stuBuild},
        dormName=#{dormName},
        stuSex=#{stuSex},
        stuTel=#{stuTel}
        where stuId=#{stuId};
    </update>

</mapper>